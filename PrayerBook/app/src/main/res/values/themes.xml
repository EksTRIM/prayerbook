<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrayerBook.ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="pb_navigationDrawerBackgroundDrawable">#333</item>
        <item name="pb_actionBarSearchIconDrawable">@drawable/ic_actionbar_search_dark</item>
        <item name="android:actionBarStyle">@style/PrayerBook.ActionBarDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PrayerBook.ThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="pb_navigationDrawerBackgroundDrawable">#aaa</item>
        <item name="pb_actionBarSearchIconDrawable">@drawable/ic_actionbar_search_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

</resources>