        <item name="android:actionBarStyle" tools:targetApi="11">@style/PrayerBook.ActionBarDark</item>
        <item name="pb_navigationDrawerIconDrawable">@drawable/ic_navigation_drawer_dark</item>
        <item name="pb_nawigationDrawerBackgroundDrawable">#333</item>
